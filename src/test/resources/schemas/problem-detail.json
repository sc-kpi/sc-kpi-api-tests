{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Problem Detail (RFC 9457)",
  "type": "object",
  "required": ["type", "title", "status"],
  "properties": {
    "type": {
      "type": "string",
      "format": "uri"
    },
    "title": {
      "type": "string"
    },
    "status": {
      "type": "integer",
      "minimum": 100,
      "maximum": 599
    },
    "detail": {
      "type": "string"
    },
    "instance": {
      "type": "string",
      "format": "uri"
    }
  },
  "additionalProperties": true
}
